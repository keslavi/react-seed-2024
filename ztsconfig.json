{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,    
    "noEmit": true, 
    "jsx":"preserve",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "pages": ["pages/*"],
      "store": ["store/*"],
      "scss": ["scss/*"],
      "test": ["test/*"],
    },
    "types":[
      "vitest"
    ]
  }, 
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist", "build", "out", "coverage", "**/*.spec.ts", "**/*.test.ts"]
}
